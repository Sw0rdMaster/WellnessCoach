<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>

        <shape
            android:shape="rectangle"
            >
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="360.0"
                />
        </shape>
    </item>
    <item
        android:top="40dp"
        >

        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="#414141"
                />
            <size
                android:height="1dp"
                />
        </shape>
    </item>
</layer-list>
