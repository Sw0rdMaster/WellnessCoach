<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="W채hlen Sie alle Funktionen \nihres Ger채tes"
            android:id="@+id/textView4"
            android:layout_marginTop="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:textColor="@color/VaporZweitfarbe"
            android:gravity="center_horizontal" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView4">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farblicht"
                    android:id="@+id/cFarblicht"
                    android:checked="false"
                    android:layout_below="@+id/cKrauter"
                    android:layout_alignLeft="@+id/cKrauter"
                    android:textStyle="bold"
                    android:layout_alignStart="@+id/cKrauter"
                    android:layout_gravity="center_horizontal" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kr채uter"
                    android:id="@+id/cKrauter"
                    android:checked="false"
                    android:layout_above="@+id/cFarblicht"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sole"
                    android:id="@+id/cSole"
                    android:checked="false"
                    android:layout_below="@+id/cMusik"
                    android:layout_alignLeft="@+id/cDufte"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignStart="@+id/cDufte" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Musik"
                    android:id="@+id/cMusik"
                    android:checked="false"
                    android:layout_below="@+id/textView4"
                    android:layout_alignLeft="@+id/cSole"
                    android:layout_alignStart="@+id/cSole"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D체fte"
                    android:id="@+id/cDufte"
                    android:checked="false"
                    android:layout_below="@+id/cFarblicht"
                    android:layout_toLeftOf="@+id/cFarblicht"
                    android:layout_toStartOf="@+id/cFarblicht"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                     />

            </LinearLayout>
        </RadioGroup>

    </RelativeLayout>

</LinearLayout>